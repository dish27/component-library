{% macro searchTree(tree, baseUrl) %}
    <li class="cl-bs-tag-li">
        <a class="cl-bs-tag-a" href="{{ baseUrl + 'index.html#' + baseUrl + tree.relativePath }}">
            {{ tree.name }}
        </a>
    </li>

    {% if tree.children %}
        {% for child in tree.children %}
            {{ searchTree(child, baseUrl) }}
        {% endfor %}
    {% endif %}
{% endmacro %}